@page
@model Equus.App.Presentacion.Pages.BorrarPropietarioModel
@{
}
<h2>Borrar datos del Propietario</h2>
<form method="post">
    <input type="hidden" asp-for="Propietario.IdPersona"/>
    <div class="form-grup">
        <label asp-for="Propietario.IdPersona"></label>
        <input asp-for="Propietario.IdPersona" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.IdPersona"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.Cedula"></label>
        <input asp-for="Propietario.Cedula" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.Cedula"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.Nombre"></label>
        <input asp-for="Propietario.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.Nombre"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.Apellidos"></label>
        <input asp-for="Propietario.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.Apellidos"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.Direccion"></label>
        <input asp-for="Propietario.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.Direccion"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.Telefono"></label>
        <input asp-for="Propietario.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.Telefono"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Propietario.CorreoElectronico"></label>
        <input asp-for="Propietario.CorreoElectronico" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.CorreoElectronico"></span>
    </div>
    <div class="form-grup">
        <label asp-for="Propietario.NombreHacienda"></label>
        <input asp-for="Propietario.NombreHacienda" class="form-control">
        <span class="text-danger" asp-validation-for="Propietario.NombreHacienda"></span>
    </div>
     
<button type="submit" class="btn btn-primary">Eliminar</button><br>
<a asp-page="./ListaPropietarios" class="btn-default">Volver a la lista de Propietarios</a>

</form>
