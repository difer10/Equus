@page
@model Equus.App.Presentacion.Pages.IngresarPropietarioModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="text-info">
                <h1>Ingresar un Propietario</h1>
            </div>

            <form method="post">
                <table class="table">
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="Propietario.Cedula" class="from-label"></label></td>
                            <td><input asp-for="Propietario.Cedula" class="from-control" />
                                <span asp-validation-for="Propietario.Cedula" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div>
                            <td><label asp-for="Propietario.Nombre" class="from-label"></label></td>
                            <td><input asp-for="Propietario.Nombre" class="from-control" />
                                <span asp-validation-for="Propietario.Nombre" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="Propietario.Apellidos" class="from-label"></label></td>
                            <td><input asp-for="Propietario.Apellidos" class="from-control" />
                                <span asp-validation-for="Propietario.Apellidos" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div calss="mb-3">
                            <td> <label asp-for="Propietario.Direccion" class="from-label"></label></td>
                            <td><input asp-for="Propietario.Direccion" class="from-control" />
                                <span asp-validation-for="Propietario.Direccion" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="Propietario.Telefono" class="from-label"></label></td>
                            <td><input asp-for="Propietario.Telefono" class="from-control" />
                                <span asp-validation-for="Propietario.Telefono" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div calss="mb-3">
                            <td><label asp-for="Propietario.CorreoElectronico" class="from-label"></label></td>
                            <td><input asp-for="Propietario.CorreoElectronico" class="from-control" />
                                <span asp-validation-for="Propietario.CorreoElectronico" class="text-danger"></span>
                            </td>

                        </div>
                    </tr>
                    <br>
                    <tr>
                        <div calss="mb-3">
                            <td> <label asp-for="Propietario.NombreHacienda" class="from-label"></label></td>
                            <td><input asp-for="Propietario.NombreHacienda" class="from-control" />
                                <span asp-validation-for="Propietario.NombreHacienda" class="text-danger"></span>
                            </td>
                            <br>
                        </div>
                    </tr>
                    <br>

                </table>
                <button type="submit" class="btn btn-primary">Guardar Propietario</button>
            </form>

        </div>
    </div>
</div>

