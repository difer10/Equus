@page
@model Equus.App.Presentacion.Pages.EditarVeterinarioModel
@{
}
<h2>Editar datos del Veterinario</h2>
<form method="post">
    <input type="hidden" asp-for="Veterinario.IdPersona"/>
    
     <div class="form-grup">
        <label asp-for="Veterinario.Cedula"></label>
        <input asp-for="Veterinario.Cedula" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Cedula"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Veterinario.Nombre"></label>
        <input asp-for="Veterinario.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Nombre"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Veterinario.Apellidos"></label>
        <input asp-for="Veterinario.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Apellidos"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Veterinario.Direccion"></label>
        <input asp-for="Veterinario.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Direccion"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Veterinario.Telefono"></label>
        <input asp-for="Veterinario.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.Telefono"></span>
    </div>
     <div class="form-grup">
        <label asp-for="Veterinario.CorreoElectronico"></label>
        <input asp-for="Veterinario.CorreoElectronico" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.CorreoElectronico"></span>
    </div>
    <div class="form-grup">
        <label asp-for="Veterinario.TarjetaProfesional"></label>
        <input asp-for="Veterinario.TarjetaProfesional" class="form-control">
        <span class="text-danger" asp-validation-for="Veterinario.TarjetaProfesional"></span>
    </div>
     
<button type="submit" class="btn btn-primary">Actualizar</button><br>
<a asp-page="./ListaVeterinarios" class="btn-default">Volver a la lista de Veterinarios</a>

</form>


